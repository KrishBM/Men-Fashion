<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:layout_margin="10dp"
                    android:src="@drawable/trouser"
                    android:id="@+id/orderTypeImg"
                    android:layout_width="100dp"
                    android:layout_height="150dp" />

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/customerName"
                        android:textColor="#000"
                        android:fontFamily="@font/pop_semi_bold"
                        android:textSize="18sp"
                        android:layout_marginHorizontal="10dp"
                        android:text="Ayush"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp">

                        <TextView
                            android:id="@+id/fabricType"
                            android:text="Cotten"
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/pop_bold"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "/>

                        <TextView
                            android:id="@+id/fabricColor"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/pop_bold"
                            android:text="Red" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp">

                        <TextView
                            android:text="Total Amount:  "
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/pop_bold"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/pop_semi_bold"
                            android:text="â‚¹300" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp">

                        <TextView
                            android:text="Issued Date:  "
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/pop_bold"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/issuedDate"
                            android:text="11/05/2001"
                            android:fontFamily="@font/pop_semi_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp">
                        <TextView
                            android:text="M No.: "
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/pop_bold"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/phoneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pop_semi_bold"
                            android:text="9879879878"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_height="1dp"
                android:background="@color/view" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <ImageView
                    android:id="@+id/button_dateP"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="30dp"
                    android:src="@drawable/baseline_calendar_month_24"
                    android:layout_weight="1"
                    android:layout_marginVertical="5dp"
                    app:tint="@color/app_light_blue" />
                <TextView
                    android:id="@+id/deliveredDate"
                    android:hint="Delivery Date"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/pop_semi_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:background="@color/view"
                    android:layout_marginHorizontal="20dp"
                    android:layout_gravity="center_vertical"
                    />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:textSize="13dp"
                    android:text="Submit"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/submit"
                    android:background="@color/app_light_blue"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>